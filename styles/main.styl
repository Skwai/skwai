html {
  font-size: 14px;

  @media (min-width: 640px) {
    font-size: 15px;
  }

  @media (min-width: 768px) {
    font-size: 16px;
  }
}

body {
  $stroke = rgba(0,0,0,.05)
  margin: 0;
  display: flex;
  min-height: 100vh;
  justify-content: center;
  align-items: center;
  font: 400 1rem/1.428 -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,Oxygen-Sans, Ubuntu, Cantarell, "Helvetica Neue", sans-serif;
  text-rendering: geometricPrecision;
  text-align: center;
  color: #fff;
  background: #396EE8 linear-gradient(45deg, transparent 45%, $stroke 45%, $stroke 55%, transparent 55%);
  background-size: 25px 25px;
  letter-spacing: 0.03em;
}

a {
  color: inherit;

  &:hover {
    text-decoration: none;
  }
}

.Doc {
  padding: 2rem;
}

.Title {
  font-size: 2.5rem;
  font-weight: 700;
  margin: 0 0 1rem;
  line-height: 1;
  text-shadow: rgba(0,0,0,.2) 0 1px 0;
}

.Description {
  margin: 0 0 2rem;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.Contact {
  margin: 0;
  font-style: normal;
}

.Seperator {
  display: inline-block;
  margin: 0 .75rem;
  width: .35rem;
  height: .35rem;
  border-radius: 50%;
  background: rgba(0,0,0,.2);
  box-shadow: #396EE8 0 0 0 0.35rem;
}

.Btn {
  border-radius: 99px;
  text-decoration: none;
  display: inline-block;
  padding: 0.5em 1.5em;
  color: inherit;
  margin: 0.5em 0.25em;
  font-weight: 600;
  color: white;
  min-width: 7rem;
  border: white solid 2px;

  &:hover {
    background: white;
    border-color: white;
    color: #396EE8;
  }
}